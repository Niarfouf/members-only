extends layout

block content

  h1 #{message.title} created by #{message.created_by.name} on #{message.time_stamp_formatted}
  p= message.text

  p Do you really want to delete this Message?

  form(method='POST')  
    div.form-group  
      input#messageid.form-control(type='hidden', name='messageid', value=message._id )  

    button.btn.btn-primary(type='submit') Delete    